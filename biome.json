{
    "$schema": "https://biomejs.dev/schemas/2.1.3/schema.json",
    "assist": {
        "actions": {
            "source": {
                "organizeImports": "off"
            }
        }
    },
    "formatter": {
        "enabled": true,
        "formatWithErrors": true,
        "indentStyle": "space",
        "indentWidth": 4,
        "lineWidth": 120
    },
    "javascript": {
        "formatter": {
            "indentWidth": 2
        }
    },
    "json": {
        "parser": {
            "allowComments": true
        }
    }
}
